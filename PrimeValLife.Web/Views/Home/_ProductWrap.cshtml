@model PrimeValLife.Core.Models.Products.Product
<div class="product-cart-wrap">
    <div class="product-img-action-wrap">
        <div class="product-img product-img-zoom">
            <a href="@Url.Action("ProductView","Products",new {id=Model.ProductId})">
                <img class="default-img" src="@Model.PrimaryImageUrl" alt="" />
                @* <img class="hover-img" src="assets/imgs/shop/product-1-2.jpg" alt="" /> *@
            </a>
            <input type="hidden" value="@Model.ProductId" id="productId" />
            <input type="hidden" value="@Model.ProductVariations.First().ProductVariationId" id="productVariationId" />
        </div>
       @*  <div class="product-action-1">
            <a aria-label="Quick view" class="action-btn small hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal"> <i class="fi-rs-eye"></i></a>
            <a aria-label="Add To Wishlist" class="action-btn small hover-up" href="shop-wishlist.html"><i class="fi-rs-heart"></i></a>
            <a aria-label="Compare" class="action-btn small hover-up" href="shop-compare.html"><i class="fi-rs-shuffle"></i></a>
        </div> *@
        <div class="product-badges product-badges-position product-badges-mrg">
            <span class="hot">
                Save 
                @{
                    var discount = (Model.StandardCost - Model.Price) / Model.StandardCost * 100;
                }
                @if (discount % 1 == 0)
                {
                    @((int)discount)
                }
                else
                {
                    @discount.ToString("0.00")
                }%
            </span>
        </div>
    </div>
    <div class="product-content-wrap">
        <div class="product-category">
            <a href="shop-grid-right.html">@Model.ProductCategories.First().Category.Name</a>
        </div>
        <h2><a href="shop-product-right.html">@Model.Name</a></h2>
        <div class="product-rate d-inline-block">
            <div class="product-rating" style="width: 80%"></div>
        </div>
        <div class="product-price mt-10">
            <span class="currency">
                @if (Model.Price % 1 == 0)
                {
                    @((int)Model.Price)
                }
                else
                {
                    @Model.Price.ToString("0.00")
                }
                </span>
            <span class="old-price currency">
                @if (Model.StandardCost% 1 == 0)
                {
                    @((int)Model.StandardCost)
                }
                else
                {
                    @Model.StandardCost.ToString("0.00")
                }
                </span>
        </div>
        @* <div class="sold mt-15 mb-15">
            <div class="progress mb-5">
                <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <span class="font-xs text-heading"> Sold: 90/120</span>
        </div> *@
        <a class="btn w-100 hover-up addToCart"><i class="fi-rs-shopping-cart mr-5"></i>Add To Cart</a>
    </div>
</div>
