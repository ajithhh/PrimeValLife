@inject IIdentityService _iservice;
<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8" />
    <title>PrimeVal Life | @ViewData["Title"]</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
